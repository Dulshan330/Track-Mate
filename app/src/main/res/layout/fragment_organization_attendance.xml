<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    tools:context=".OrganizationAttendanceFragment">


    <LinearLayout
        android:id="@+id/org_attendance_1st_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:text="Attendance"
            android:textColor="@color/text_color"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/org_attendance_2nd_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"

        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Emp No."
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/org_attendance_empno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_with_white_background"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:padding="7dp"
            android:hint="Enter the Employee Number"
            android:inputType="number"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Year"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/org_attendance_dropdown_year"
            android:layout_width="match_parent"
            android:scrollbarSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/textview_with_white_background"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Month"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <Spinner
            android:id="@+id/org_attendance_dropdown_month"
            android:layout_width="match_parent"
            android:scrollbarSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/textview_with_white_background"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_white_background"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/theme_color"
            android:text="Submit"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:layout_margin="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/org_attendance_clear_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:background="@drawable/btn_blue_backgroud_with_white_stroke"
            android:fontFamily="@font/lato_regular"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="table view"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/white"/>

        </LinearLayout>


    </LinearLayout>





</FrameLayout>