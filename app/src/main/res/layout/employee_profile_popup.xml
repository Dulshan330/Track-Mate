<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_background"
    android:layout_marginHorizontal="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="6dp">

        <TextView
            android:id="@+id/emp_profile_currentpasswordtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Current Password"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"/>

        <EditText
            android:id="@+id/emp_profile_currentpassword"
            android:layout_below="@id/emp_profile_currentpasswordtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:padding="7dp"
            android:hint="Enter the current password"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/emp_profile_newpasswordtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="New Password"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"/>

        <EditText
            android:id="@+id/emp_profile_newpassword"
            android:layout_below="@id/emp_profile_newpasswordtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:padding="7dp"
            android:hint="Enter the new password"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/emp_profile_confirmpasswordtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Confirm Password"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"/>

        <EditText
            android:id="@+id/emp_profile_confirmpassword"
            android:layout_below="@id/emp_profile_confirmpasswordtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_border"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:padding="7dp"
            android:hint="Enter the confirm password"
            android:layout_marginBottom="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="150dp"
            android:id="@+id/emp_profile_changePasswordBtn"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginVertical="6dp"
            android:padding="5dp"
            android:fontFamily="@font/lato_bold"
            android:textSize="20dp"
            android:background="@drawable/btn_white_background"
            android:text="Save"
            android:inputType="textCapWords"
            android:textColor="@color/theme_color" />

    </LinearLayout>

</RelativeLayout>