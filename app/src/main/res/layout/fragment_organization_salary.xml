<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_color"
    tools:context=".OrganizationSalaryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Salaries"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:textColor="@color/text_color"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Emp No."
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/org_salary_empno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_with_white_background"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:padding="7dp"
            android:hint="Enter the Employee Number"
            android:inputType="number"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Hourly Rate"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/org_salary_hourlyRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_with_white_background"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:padding="7dp"
            android:hint="Enter the Houarly Rate"
            android:inputType="number"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="OT Rate"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/org_salary_otRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_with_white_background"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:padding="7dp"
            android:hint="Enter the OT Rate"
            android:inputType="number"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Reimburse"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/org_salary_reimburse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_with_white_background"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:padding="7dp"
            android:hint="Enter the Reimburse Amount"
            android:inputType="number"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="5dp"
            android:text="Atterdance Allowance"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/white"/>

        <EditText
            android:id="@+id/org_salary_allowance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/textview_with_white_background"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"
            android:padding="7dp"
            android:hint="Enter the Atterdance Allowance"
            android:inputType="number"
            android:layout_marginBottom="5dp"/>



        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/org_salary_submit_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_white_background"
            android:fontFamily="@font/lato_bold"
            android:textColor="@color/theme_color"
            android:text="Submit"
            android:textSize="20dp"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:layout_margin="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/org_salary_clear_button"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:background="@drawable/btn_blue_backgroud_with_white_stroke"
            android:fontFamily="@font/lato_regular"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="20dp" />




    </LinearLayout>

</FrameLayout>