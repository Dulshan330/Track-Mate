<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeAttendanceFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="@color/theme_color"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="Attendance"
            android:fontFamily="@font/lato_bold"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Year"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"/>

        <Spinner
            android:id="@+id/emp_attendance_dropdown_year"
            android:layout_width="match_parent"
            android:scrollbarSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/dropdown_border"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Month"
            android:fontFamily="@font/lato_regular"
            android:textSize="18dp"
            android:textColor="@color/text_color"/>

        <Spinner
            android:id="@+id/emp_attendance_dropdown_month"
            android:layout_width="match_parent"
            android:scrollbarSize="16dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:background="@drawable/dropdown_border"/>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_blue_background"
            android:fontFamily="@font/lato_regular"
            android:textColor="@color/white"
            android:text="Submit"
            android:textAllCaps="false"
            android:layout_gravity="right"
            android:layout_margin="8dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/emp_attendance_reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:background="@drawable/btn_white_background"
            android:fontFamily="@font/lato_regular"
            android:text="Clear"
            android:textAllCaps="false"
            android:textColor="@color/theme_color" />


    </LinearLayout>

</FrameLayout>